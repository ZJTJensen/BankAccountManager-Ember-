<style>
    .grayBorder{
        border-style: groove;
        border-width: 5px;
        display: inline-block;
        margin: 10px 5% 0 5%;
    }
    .tableTable{
        width: 100%;
        height: 50%;
    }
    .flex{
        position: absolute;
        bottom: 10px;
        right: 150px;
        display: flex; 
        justify-content: space-between;
        text-align: right;
    }
    .outerCircle{
        width: 300px;
        height: 300px;
        border-radius: 50%;
        background-color:#3f51b5;
        margin: 10% auto;
        padding: 20px 0 0 0;
    }
    .innerCircle{
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background-color: white;
        margin: 10% auto 8% auto;
        padding: 25px 0 0 25px;
    }
    #textInfo{
        width: auto;
        height: auto;
        margin: 0 0% 0px 20%;
        color: white;
        font-weight: bold;
        font-size: 25px;
    }
    #buttonInfo{
        width: auto;
        height: auto;
        margin: 0 0 0 25%;
    }
    button{
        color: rgb(11, 123, 175) !important;
        border-radius: 15px !important;
        padding: 0px 20px !important;
    }
</style>


<div class="vh-100 bg-light-gray" style="width: 100%;">
    {{#paper-toolbar}}
        <div class="md-toolbar-tools white" style="width: 100%;">
            <p class=""> {{paper-icon ""}}    
                <span class="flex"> 
                    
                    <span class="light-blue" style="border-radius: 10px;">
                    {{#link-to "accounts" class ="button"}}
                    {{#paper-button raised=true}}
                    ADD ACCOUNT
                    {{/paper-button}} 
                    {{/link-to}}
                    </span>
                    
                    {{#paper-button icon-button=false}}
                    {{paper-icon "more-vert"}}
                    {{/paper-button}} 
                </span>
            </p>
        </div>
    {{/paper-toolbar}}

<div class="vh-75 w-90 grayBorder">
    <div class="bg-white h-100 w-100">
        <div class="di ml7 bg-dark-blue br-100">

        <div class="outerCircle">
            <div class="innerCircle">
                {{paper-icon "library-books" size=48}}
            </div>
            <div id= "textInfo">

            No accounts yet <br/>
            </div>
            <div id="buttonInfo">

                <div class=" br-pill dim">
                    <span class="light-blue" style="border-radius: 10px;">
                        {{#link-to "accounts" class ="button"}}
                        {{#paper-button raised=true}}
                        ADD ACCOUNT
                        {{/paper-button}} 
                        {{/link-to}}
                        </span>
                </div>
            </div>
            </div>
        </div>
    </div>
    </div>
</div>

