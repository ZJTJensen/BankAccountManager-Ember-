<style>
    .grayBorder{
        border-style: groove;
        border-width: 5px;
        display: inline-block;
        margin: 10px 5% 0 5%;
    }
    .tableTable{
        width: 100%;
        height: 50%;
    }
    .flex{
        position: absolute;
        bottom: 10px;
        right: 150px;
        display: flex; 
        justify-content: space-between;
        text-align: right;
    }
    button{
        color: rgb(11, 123, 175) !important;
        border-radius: 15px !important;
        padding: 0px 20px !important;
    }

</style>


<div class="vh-100 bg-light-gray" style="width: 100%;">
    {{#paper-toolbar}}
        <div class="md-toolbar-tools white" style="width: 100%;">
            <p class=""> <span class="dim">{{paper-icon "library-books"}}</span>    
                <span class="flex"> 
                    
                    <span class="light-blue dim" style="border-radius: 10px;">
                    {{#paper-button raised=true}}
                    ADD ACCOUNT
                    {{/paper-button}} 
                    </span>
                    
                    {{#paper-button icon-button=false}}
                    {{paper-icon "more-vert"}}
                    {{/paper-button}} 
                </span>
            </p>
        </div>
    {{/paper-toolbar}}

<div class="h-75 w-90 grayBorder" >
    <div class="bg-white h-100 w-100">
        <table class="collapse bt br bl br2 b--black-10 tableTable">
            <thead class='gray bb b--black-10 w-100 h-100' align="left">
                <tr class="striped--white">
                    <th>Account</th>
                    <th>Bank Name</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {{#each model as |account|}}

                <tr class="striped--white bb b--black-10">
                    <td><b>{{account.account}} </b></td>
                    <td><b>{{account.bankName}}</b></td>
                    {{#if (eq account.description "Ohio Residential 2017")}}
                    <td><b>{{account.description}} </b><span class="gray">(Default)</span></td>
                    {{else}}
                     <td><b>{{account.description}}</b></td>
                    {{/if}}
                    <td>{{paper-icon "more-horiz"}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
</div>